<UserControl
    x:Class="WpfControlLib.NoMaterialWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfControlLib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Margin="30,30,0,0"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button x:Name="SettingButton" Margin="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,0,0" VerticalAlignment="Center">マテリアルデザインを適用していない素のユーザーコントロールです。</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>